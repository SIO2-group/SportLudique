<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>SportLudique{% block title %}{% endblock %}</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">

  {% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
  {% endblock %}

  {% block javascripts %}
    {{ encore_entry_script_tags('app') }}
  {% endblock %}
</head>
<body>
<header class="header">
  <nav class="nav">
    <ul class="nav-list">
      <li class="nav-list-element">
        <a class="nav-list-element-link" href="{{ path('app_global') }}">
          <p class="nav-title">Sport Ludique</p>
        </a>
      </li>
      <li class="nav-list-element">
        <label class="nav-list-label" for="searchbar">
          <input id="searchbar" class="nav-list-search" type="text" placeholder="Recherchez un article">
        </label>
      </li>
      <li class="nav-list-element nav-list-element__right">
        {% if app.user %}
          <a class="nav-list-element-link" href="{{ path('app_profile') }}">
            Profil
            <img class="nav-list-element-img" src="/img/website/profile.svg" alt="Logo connexion">
          </a>
        {% else %}
          <a class="nav-list-element-link" href="{{ path('app_login') }}">
            Connexion
            <img class="nav-list-element-img" src="/img/website/connexion.svg" alt="Logo connexion">
          </a>
        {% endif %}
        <a class="nav-list-element-link" href="">
          Panier
          <img class="nav-list-element-img" src="/img/website/panier.svg" alt="Logo Panier">
        </a>
      </li>
    </ul>
  </nav>
</header>
{% block content %}{% endblock %}
</body>
</html>
