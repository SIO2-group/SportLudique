{% extends 'base.html.twig' %}

{% block title %}Brand index{% endblock %}

{% block content %}
    <h1>Brand index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>File_id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for brand in brands %}
            <tr>
                <td>{{ brand.id }}</td>
                <td>{{ brand.fileId }}</td>
                <td>{{ brand.name }}</td>
                <td>
                    <a href="{{ path('app_brand_show', {'id': brand.id}) }}">show</a>
                    <a href="{{ path('app_brand_edit', {'id': brand.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_brand_new') }}">Create new</a>
{% endblock %}
